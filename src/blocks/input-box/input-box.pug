include ../input/input
include ../expand-button/expand-button
//- 
  options.title - title
  options.placeholder - placeholder
  options.status - text in top right —Åorner
  options.value - input value
  options.autofocus - boolean
  options.masked - true/false
  options.expandButton - true/false

mixin input-box(options)
  .input-box(class = attributes.class)
    if options.title
      h3.input-box__title= options.title
    if options.status
      span.input-box__status= options.status
    +input(options).input-box__input
    if options.expandButton
      +expand-button.input-box__expand-button.js-dropdown__button