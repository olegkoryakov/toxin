include ../arrow/arrow

//- 
  options.title - title
  
mixin pagination(options)
  - const { title } = options;
  article.pagination(class = attributes.class)
    if title
      h3.pagination__title= title
    ul.pagination__pages
      li.pagination__page 
        a.pagination__page-link.pagination__page-link_current(href="#") 1
      li.pagination__page  
        a.pagination__page-link(href="#") 2
      li.pagination__page  
        a.pagination__page-link(href="#") 3
      li.pagination__page  
        a.pagination__page-link(href="#") ...
      li.pagination__page 
        a.pagination__page-link(href="#") 15
      li.pagination__page 
        a.pagination__page-link.pagination__page-link_next(href="#")
          +arrow().pagination__page-link-svg
    span.pagination__subtitle 1 – 12 из 100+ вариантов аренды