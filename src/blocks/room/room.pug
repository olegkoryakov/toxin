include ../star-rating/star-rating

//-
  options.number - number of number))
  options.rating - number from 0 to 5
  options.price - price
  options.reviewsCount - reviews count
  options.url - preview img url
  options.luxe - true/false

mixin room(options)
  - 
    const {
      number,
      rating,
      price,
      reviewsCount,
      url,
      luxe
    } = options;
    const luxeClassMod = luxe ? 'room_luxe' : '';  
  article.room(class = attributes.class, class = luxeClassMod)
    .room__preview
      img(src = url).room__preview-img
      button.room__preview-button.room__preview-button_next
      button.room__preview-button.room__preview-button_prev
      ul.room__preview-list
        li.room__preview-item.room__preview-item_current
        li.room__preview-item
        li.room__preview-item
        li.room__preview-item
    .room__content
      .room__about
        span.room__number-details
          span.room__number-prefix №
          span.room__number= number
        span.room__price
          span.room__price-current= `${price}₽`
          span.room__price-text В сутки
      .room__rating
        +star-rating({ stars: rating}).room__star-rating
        span.room__reviews
          span.room__reviews-count= reviewsCount
          span.room__reviews-text Отзывов
