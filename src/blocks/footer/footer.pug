include ../subscription-form/subscription-form
include ../twitter-logo/twitter-logo
include ../instagram-logo/instagram-logo
include ../facebook-logo/facebook-logo
include ../toxin-logo/toxin-logo

mixin social()
  ul.footer__social-list
    li.footer__social-item
      a.footer__social-link(href = "mock")
        .footer__social-img
          +twitter-logo()
    li.footer__social-item
      a.footer__social-link(href = "mock")
        .footer__social-img
          +facebook-logo()
    li.footer__social-item
      a.footer__social-link(href = "mock")
        .footer__social-img
          +instagram-logo()



mixin copyright(lang)
  - 
    const text = lang === "en" ? "Copyright © 2018 Toxin UI Kit. All rights reserved." : "Copyright © 2018 Toxin отель. Все права зачищены.";
  .footer__copyright
    .footer__copyright-content
      p.footer__copyright-text= text
      +social()


mixin navigation(lang)
  -
    const linksHrefs = [
      ["mock", "mock", "mock", "mock"],
      ["mock", "mock", "mock", "mock"],
      ["mock", "mock", "mock"]
    ];
    let lists;
    if (lang === "ru") {
      lists = [
        {
          title: "Навигация",
          linkList: ["О нас", "Новости", "Служба поддержки", "Услуги"],
        },
        {
          title: "О нас",
          linkList: ["О сервисе", "Наша команда", "Вакансии", "Инвесторы"],
        },
        {
          title: "Служба поддержки",
          linkList: ["Соглащения", "Сообщества", "Связь с нами"],
        }
      ];
    } else if (lang === "en") {
       lists = [
        {
          title: "Navigation",
          linkList: ["About us", "News", "Support", "Products"],
        },
        {
          title: "About us",
          linkList: ["Who we are", "Our team", "Careers", "Investors"],
        },
        {
          title: "Support",
          linkList: ["Documentation", "Community", "Get in touch"],
        }
      ];
    };
    lists.forEach((list, index) => list.hrefs = [...linksHrefs[index]]);
  ul.footer__navigation-lists
    each obj in lists
      li.footer__navigation-lists-item
        nav.footer__navigation
          h3.footer__navigation-title= obj.title
          ul.footer__navigation-list
            each item, index in obj.linkList
              li.footer__navigation-item
                a(href= obj.hrefs[index]).footer__navigation-link= item

mixin about(lang)
  -
    let text;
    if (lang === "en") {
      text = "Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.";
    } else if (lang === "ru") {
      text = "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»";
    }
  .footer__about
    .footer__logo
        +toxin-logo
    .footer__about-text= text

mixin subscription(lang)
  - 
    let title;
    let text;
    let placeholder;
      if (lang === "en") {
        text = "Receive our latest news and promotions in your inbox!";
        placeholder = "Your email address";
        title = "Subscribe to our newsletter";
      } else if (lang === "ru") {
        text = "Получайте специальные предложения и новости сервиса";
        placeholder = "Email";
        title = "Подписка";
      }
  .footer__subscription
    h3.footer__subscription-title= title
    p.footer__subscription-text= text
    .footer__subscription-form
      +subscription-form({ placeholder: placeholder })

mixin footer(options)
  footer.footer(class = attributes.class)
    if options.type === "maxi"
      .footer__content
        +about(options.lang)
        +navigation(options.lang)
        +subscription(options.lang)
      +copyright(options.lang)
    else if options.type === "mini"
      .footer__content.footer__content_mini
        +about(options.lang)
        +social()