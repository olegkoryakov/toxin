include ../button/button
include ../dropdown-items-counter/dropdown-items-counter
include ../dropdown-calendar/dropdown-calendar

mixin number-search({ title = "", dropdownItemsCounterOptions = {}, dropdownCalendarOptions = {}, buttonOptions = {} } = {})
  section.number-search
    .number-search__content
      h1.number-search__title= title
      .number-search__dropdown-calendar
        +dropdown-calendar(dropdownCalendarOptions)
      .number-search__dropdown-items-counter
        +dropdown-items-counter(dropdownItemsCounterOptions)
      .number-search__submit-button
        +button(buttonOptions)
