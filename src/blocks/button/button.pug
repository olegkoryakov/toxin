//- 
  options.type - 'filled-wide', 'filled', 'stroked', 'apply', 'reset'
  options.focused - true/false
  options.text - button text
  options.formId - form id

mixin button(options)
  - const classMod = `button--${options.type}`;
  button.button(type = 'button', class = classMod, class = attributes.class, form = options.formId)= options.text
    if options.type === 'filled-wide'
      .button__arrow
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z" fill="white"/>
        </svg>