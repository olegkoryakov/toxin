include ../like-button/like-button

mixin comment(options)
  - const { url, text, name, date, like } = options;
  .comment
    .comment__content
      img.comment__img(src = url, alt = name)
      p.comment__about
        cite.comment__author= name
        span.comment__date= date
    .comment__content
      +like-button(like).comment__like-button
      blockquote.comment__comment= text
