include ../like-button/like-button
mixin comment({ url = "", text = "", name = "", date = "", likeButtonOptions = {} } = {})
  .comment
    .comment__content
      img.comment__img(src = url, alt = name)
      p.comment__about
        cite.comment__author= name
        span.comment__date= date
    .comment__content
      .comment__like-button
        +like-button(likeButtonOptions)
      blockquote.comment__comment= text
